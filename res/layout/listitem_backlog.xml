<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="wrap_content"    android:layout_height="wrap_content"    android:orientation="vertical"    android:clickable="false"     >    <RelativeLayout        android:id="@+id/showSeparator"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@android:color/holo_blue_light"        android:clickable="false"        android:orientation="vertical"        android:visibility="visible" >        <TextView            android:id="@+id/txtShowName"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:padding="10dip"            android:scrollHorizontally="true"            android:scrollbars="none"            android:shadowColor="@android:color/black"            android:shadowDx="1"            android:shadowDy="1"            android:shadowRadius="1"            android:text="tedfhdkfshkdf"            android:textAllCaps="true"            android:textColor="#ffffffff"            android:textSize="11sp"            android:textStyle="normal|bold"            android:typeface="normal"            android:clickable="false"             />    </RelativeLayout>    <TextView        android:id="@+id/txtEpisodeInformation"        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:text="TextView"        android:padding="10dip"        android:background="@drawable/background_listitem"         /></LinearLayout>