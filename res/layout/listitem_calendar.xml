<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="wrap_content"    android:layout_height="wrap_content"    android:orientation="vertical">    <RelativeLayout        android:id="@+id/daySeparator"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@android:color/holo_blue_light"        android:clickable="false"        android:focusable="false"        android:orientation="vertical"        android:visibility="visible" >        <TextView            android:id="@+id/txtDate"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:padding="10dip"            android:scrollHorizontally="true"            android:scrollbars="none"            android:shadowColor="@android:color/black"            android:shadowDx="1"            android:shadowDy="1"            android:shadowRadius="1"            android:text="tedfhdkfshkdf"            android:textAllCaps="true"            android:textColor="#ffffffff"            android:textSize="11sp"            android:textStyle="normal|bold"            android:typeface="normal" />    </RelativeLayout>    <RelativeLayout        android:id="@+id/layoutEpisode"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:clickable="true"        android:focusable="true" >        <ImageView            android:id="@+id/imgSeriesImage"            android:layout_width="fill_parent"            android:layout_height="wrap_content"            android:adjustViewBounds="true"            android:scaleType="centerCrop"            android:src="@drawable/noimage" />        <TextView            android:id="@+id/txtEpisodeInformation"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_alignBottom="@+id/imgSeriesImage"            android:layout_alignParentLeft="true"            android:layout_alignParentRight="true"            android:padding="3dp"            android:background="#75000000"            android:shadowColor="@android:color/black"            android:shadowDx="1"            android:shadowDy="1"            android:shadowRadius="1"            android:text="tedfhdkfshkdf"            android:textAllCaps="true"            android:textColor="#ffffffff"            android:textSize="12sp"            android:textStyle="normal|bold"            android:typeface="normal" />    </RelativeLayout></LinearLayout>