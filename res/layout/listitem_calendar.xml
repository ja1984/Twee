<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/layoutEpisode"    android:layout_width="wrap_content"    android:layout_height="wrap_content" >        <ImageView        android:id="@+id/imgSeriesImage"        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:scaleType="matrix"        android:src="@drawable/noimage"        android:focusable="false"         />        <TextView        android:id="@+id/txtExtra"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentLeft="true"        android:textAppearance="?android:attr/textAppearanceMedium"        android:textSize="12sp"        android:visibility="gone" />    <TextView        android:id="@+id/txtTitle"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentLeft="true"        android:layout_below="@id/txtExtra"        android:layout_toLeftOf="@+id/chkWatched"        android:textAppearance="?android:attr/textAppearanceLarge" />    <TextView        android:id="@+id/txtEpisodeNumber"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentLeft="true"        android:layout_below="@id/txtTitle"        android:textAppearance="?android:attr/textAppearanceMedium"        android:textSize="12sp" />    <CheckBox        android:id="@+id/chkWatched"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignBaseline="@id/txtTitle"        android:layout_alignParentRight="true"        android:layout_alignParentTop="true" /></RelativeLayout>