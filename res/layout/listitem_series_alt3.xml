<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingRight="10dp"
    android:background="@drawable/background_now2"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="10dp"
        android:background="@drawable/background_now_shadow"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgSeriesImage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:focusable="false"
            android:scaleType="centerCrop"
            android:src="@drawable/noimage" />

        <TextView
            android:id="@+id/txtUpcomingEpisode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textAllCaps="true"
            android:textColor="#707070"
            android:textSize="12sp"
            android:textStyle="normal"
            android:typeface="normal" />

        <ProgressBar
            android:id="@+id/pgrWatched"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:max="100"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:progress="50"
            android:progressDrawable="@drawable/progressbar_black" />
    </LinearLayout>

</LinearLayout>